<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_theme"
                android:padding="@dimen/_20sdp"
                android:gravity="center"
                android:weightSum="8">
                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="icon_back"
                    android:src="@drawable/ic_back"
                    tools:ignore="HardcodedText"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin cá nhân"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_theme"
                    android:textStyle="bold"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/userImg"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/user_vector"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thay đổi ảnh đại diện"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="@color/app_theme"
                    android:layout_marginTop="@dimen/_5sdp"
                    />
            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">
                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Tên tài khoản"
                        android:textSize="@dimen/text_size_medium"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/gray"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="0987654321"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_medium"
                        android:paddingRight="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:gravity="right"/>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Giới tính"
                        android:textSize="@dimen/text_size_medium"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/gray"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_acc_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Unknown"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_medium"
                        android:paddingRight="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:gravity="right"/>
                </LinearLayout>
                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Ngày sinh"
                        android:textSize="@dimen/text_size_medium"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/gray"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_acc_birth_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="__/__/____"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_medium"
                        android:paddingRight="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:gravity="right"/>
                </LinearLayout>
            </GridLayout>
            <Button
                android:id="@+id/btn_edit_acc_info"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:elevation="@dimen/_8sdp"
                android:text="Chỉnh sửa thông tin"
                android:textSize="@dimen/text_size_medium"
                android:backgroundTint="@color/dark_blue"/>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/bottom_navigation"/>
</androidx.constraintlayout.widget.ConstraintLayout>