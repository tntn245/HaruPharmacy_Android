<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_dark_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/icon_order"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/chat"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txt_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="#ID DON HANG"
        app:layout_constraintLeft_toRightOf="@id/icon_order"
        app:layout_constraintBottom_toTopOf="@id/txt_staff_name"/>
    <TextView
        android:id="@+id/txt_staff_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="Staff Name: "
        app:layout_constraintLeft_toRightOf="@id/icon_order"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_order_id"
        />

    <TextView
        android:id="@+id/txt_total_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Total Payment: "
        app:layout_constraintLeft_toRightOf="@id/icon_order"
        app:layout_constraintTop_toBottomOf="@id/txt_staff_name"
        />
    <TextView
        android:id="@+id/txt_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order status: "
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="@id/txt_order_id"
        app:layout_constraintStart_toStartOf="@id/txt_payment_status"/>
    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginEnd="-8dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_order_status"
        app:layout_constraintTop_toBottomOf="@id/txt_order_status" />
    <TextView
        android:id="@+id/txt_payment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment status: "
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/order_status"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not yet"
        app:layout_constraintEnd_toEndOf="@id/txt_payment_status"
        app:layout_constraintTop_toBottomOf="@id/txt_payment_status"/>
</androidx.constraintlayout.widget.ConstraintLayout>