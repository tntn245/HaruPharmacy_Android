<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activities.admin.AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme"
        android:gravity="center"
        android:padding="@dimen/_20sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thay đổi quy định"
            android:textColor="@color/text_theme"
            android:textSize="@dimen/text_size_large"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_25sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Phần trăm lợi nhuận"
                android:textColor="@color/gray"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/percent_profit"
                android:layout_width="@dimen/_285sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:background="@drawable/input_border_radius"
                android:paddingStart="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_25sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Tồn kho tối thiểu"
                android:textColor="@color/gray"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/min_inventory"
                android:layout_width="@dimen/_285sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:background="@drawable/input_border_radius"
                android:paddingStart="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_25sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Nhập kho tối thiểu"
                android:textColor="@color/gray"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/min_stockin"
                android:layout_width="@dimen/_285sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:background="@drawable/input_border_radius"
                android:paddingStart="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_25sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Thêm đơn vị"
                android:textColor="@color/gray"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/unit_name"
                android:layout_width="@dimen/_285sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:imeOptions="actionDone" android:background="@drawable/input_border_radius"
                android:paddingStart="@dimen/_15sdp" />
            <Button
                android:id="@+id/btn_add_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_color"
                android:elevation="@dimen/_8sdp"
                android:padding="@dimen/_10sdp"
                android:text="Thêm đơn vị mới"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_8sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_color"
            android:elevation="@dimen/_8sdp"
            android:padding="@dimen/_10sdp"
            android:text="Lưu"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_8sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/test9"
            android:elevation="@dimen/_8sdp"
            android:text="Hủy"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>
</LinearLayout>
