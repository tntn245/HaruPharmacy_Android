<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_430sdp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:gravity="top">
    <!-- Các thành phần trong drawer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/close_button"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/ic_x"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn số lượng, đơn vị"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:background="@color/background">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="3">
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="0dp"
            android:layout_height="@dimen/_75sdp"
            android:src="@drawable/pro3"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_75sdp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Viên uống chữa lành tâm hồn"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="280.000"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:textColor="@color/app_theme"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" đ"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:textColor="@color/app_theme"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đơn vị"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/gray"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">
    <RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RadioButton
        android:id="@+id/option1RadioButton"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="Hộp"
        android:background="@drawable/custom_radio_button"
        android:button="@null"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:drawablePadding="16dp"
        android:onClick="onRadioButtonClicked"
        android:checked="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="sans-serif-black"/>

    <RadioButton
        android:id="@+id/option2RadioButton"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="Lọ"
        android:background="@drawable/custom_radio_button"
        android:button="@null"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:drawablePadding="16dp"
        android:onClick="onRadioButtonClicked"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="sans-serif-black"/>
    </RadioGroup>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số lượng"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/gray"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/dark_blue"
            android:gravity="center"
            android:padding="0dp"
            android:text="-"></Button>

        <TextView
            android:id="@+id/item_cart_quanlity"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="2"
            android:background="@drawable/border_radius"
            android:gravity="center"
            android:text="2 ">

        </TextView>

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/dark_blue"
            android:gravity="center"
            android:padding="0dp"
            android:text="+"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu ý: Đơn hàng sau 21:00 sẽ được giao vào 8:00 hôm sau. Quy khách có thể:"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đến nhà thuốc"
            android:textColor="@color/dark_blue"
            android:fontFamily="sans-serif-black"></TextView>
    </LinearLayout>
        <LinearLayout
            android:paddingTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tạm tính"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center"
                android:gravity="start"></TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="560.000 đ"
                android:fontFamily="sans-serif-black"
                android:textSize="@dimen/_16sdp"
                android:layout_gravity="center"
                android:gravity="end"></TextView>
        </LinearLayout>
    <LinearLayout
        android:paddingTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:text="Thêm vào giỏ"
            android:textColor="@color/dark_blue"
            android:fontFamily="sans-serif-black"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:text="Mua ngay"
            android:fontFamily="sans-serif-black"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"></Button>
    </LinearLayout>
</LinearLayout>