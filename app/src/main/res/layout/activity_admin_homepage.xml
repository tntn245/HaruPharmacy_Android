<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:weightSum="5"
            android:gravity="center">
            <ImageView
                android:id="@+id/icon_logout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_8sdp"
                android:rotation="180"
                android:src="@drawable/nav_logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                app:tint="@color/white" />
            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_55sdp"
                android:layout_weight="3"
                android:layout_centerInParent="true"
                android:src="@drawable/img_logo" />
            <ImageView
                android:id="@+id/btnChat"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/chatbox"
                app:tint="@color/white" />

        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_20sdp"
            android:backgroundTint="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_40sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_16sdp"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_qlsp"
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/icon_qlsp"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:src="@drawable/medicine_9_svgrepo_com"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:padding="@dimen/_5sdp"
                                android:text="Quản lý sản phẩm"
                                android:textAlignment="center"
                                android:textColor="@color/app_theme"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_qlsp"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_qllsp"
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/icon_qllsp"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:src="@drawable/icon_category"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:padding="@dimen/_5sdp"
                                android:text="Quản lý loại sản phẩm"
                                android:textAlignment="center"
                                android:textColor="@color/app_theme"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_qllsp"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_16sdp"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_qldh"
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/icon_qldh"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:src="@drawable/icon_order"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:padding="@dimen/_5sdp"
                                android:text="Quản lý đơn hàng"
                                android:textAlignment="center"
                                android:textColor="@color/app_theme"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_qldh"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_qlkho"
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/icon_qlkho"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:src="@drawable/icon_inventory"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:padding="@dimen/_5sdp"
                                android:text="Quản lý kho"
                                android:textAlignment="center"
                                android:textColor="@color/app_theme"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_qlkho"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_16sdp"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_thongke"
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/icon_thongke"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:src="@drawable/icon_statistic"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:padding="@dimen/_5sdp"
                                android:text="Thống kê"
                                android:textAlignment="center"
                                android:textColor="@color/app_theme"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_thongke"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_change"
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/icon_change"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:src="@drawable/ic_menu"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints"
                                app:tint="@color/app_theme" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:padding="@dimen/_5sdp"
                                android:text="Thay đổi quy định"
                                android:textAlignment="center"
                                android:textColor="@color/app_theme"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_change"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>