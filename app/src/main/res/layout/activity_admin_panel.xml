<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <!-- ImageView for nav_drawer icon -->
        <ImageView
            android:id="@+id/drawer_icon_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_drawer"/>

        <!-- ImageView for img_logo -->
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_logo"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp">

            <include layout="@layout/component_search_bar" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_20sdp"
            android:backgroundTint="@color/background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_40sdp">
                <LinearLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:columnCount="2"
                    android:weightSum="2"
                    android:paddingHorizontal="16dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_qlsp"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_90sdp"
                        app:cardCornerRadius="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:paddingHorizontal="@dimen/_8sdp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:paddingTop="@dimen/_6sdp"
                                android:id="@+id/icon_qlsp"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/medicine_9_svgrepo_com"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/app_theme"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                android:text="Quản lý sản phẩm"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_qlsp"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_qllsp"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_90sdp"
                        app:cardCornerRadius="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:paddingHorizontal="@dimen/_8sdp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:paddingTop="@dimen/_6sdp"
                                android:id="@+id/icon_qllsp"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/icon_category"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/app_theme"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                android:text="Quản lý loại sản phẩm"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_qllsp"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:columnCount="2"
                    android:weightSum="2"
                    android:paddingHorizontal="@dimen/_16sdp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_qldh"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_90sdp"
                        app:cardCornerRadius="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:paddingHorizontal="@dimen/_8sdp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:paddingTop="@dimen/_4sdp"
                                android:id="@+id/icon_qldh"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/icon_order"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/app_theme"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                android:text="Quản lý đơn hàng"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_qldh"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_qlkho"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_90sdp"
                        app:cardCornerRadius="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:paddingHorizontal="@dimen/_8sdp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:paddingTop="@dimen/_6sdp"
                                android:id="@+id/icon_qlkho"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/icon_inventory"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/app_theme"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                android:text="Quản lý kho"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_qlkho"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:columnCount="2"
                    android:weightSum="2"
                    android:paddingHorizontal="@dimen/_16sdp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/item_thongke"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_90sdp"
                        app:cardCornerRadius="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_16sdp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:paddingTop="@dimen/_4sdp"
                                android:id="@+id/icon_thongke"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/icon_statistic"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/app_theme"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                android:text="Thống kê"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/icon_thongke"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_90sdp"
                        app:cardCornerRadius="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:visibility="invisible">
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>